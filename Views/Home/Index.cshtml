            <div class="posicao vazia"></div>
            <div class="posicao aluno"><span>@(Model[0].espelho[3])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[3]).jpg" alt="" /></div>
            <div class="posicao aluno"><span>@(Model[0].espelho[4])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[4]).jpg" alt="" /></div>
