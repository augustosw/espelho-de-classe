            <div class="posicao aluno"><span>@(Model[0].espelho[8])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[8]).jpg" alt="" /></div>
            <div class="posicao vazia"></div>
            <div class="posicao aluno"><span>@(Model[0].espelho[9])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[9]).jpg" alt="" /></div>
            <div class="posicao aluno"><span>@(Model[0].espelho[10])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[10]).jpg" alt="" /></div>
