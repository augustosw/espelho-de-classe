@model List<EspelhoDeClasse.Dominio.Espelho>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link href="~/Content/css/estilo.css" rel="stylesheet" />
</head>

@{var edicao = "2017-1"; }

<body>
    <div class="container">
        <div class="espelho">
            <div class="titulo">Projeto Crescer @edicao</div>

            <div class="posicao aluno"><span>@(Model[0].espelho[0])</span><img src="~/Content/images/fotos-@edicao/@(Model[0].espelho[0]).jpg" alt="" /></div>
